{% extends 'base.html.twig' %}

{% block title %}Page de connexion{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="jumbotron py-3 px-3">
                <h1>Connectez-vous</h1>

                {% if error %}
                    <div class="alert alert-danger">Une erreur d'authentification est survenue!!</div>
                {% endif %}

                <form action="{{path("account_login")}}" method="post">
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="text" name="_username" id="email" class="form-control" placeholder="Adresse mail" required value="{{email}}">
                    </div>
                    <div class="form-group mt-3">
                        <label for="password">Mot de passe</label>
                        <input type="password" name="_password" id="password" class="form-control" placeholder="Mot de passe" required>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-info mt-3">Connexion</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
