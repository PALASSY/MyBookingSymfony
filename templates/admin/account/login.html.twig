<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome on mybooking
			{% endblock %}
		</title>
		{# CSS minifié de bootswatch.com #}
		<link
		rel="stylesheet" type="text/css" href="/css/bootstrap.min.css">
		{# CSS #}
		<link rel="stylesheet" type="text/css" href="/css/app.css">
        {# Fontawesome #}
        <script src="https://kit.fontawesome.com/bb0dbb8b96.js" crossorigin="anonymous"></script>
    </head>
    <body>
        <main class="container mt-5">
            <div class="row">
                <div class="col-md-6 mx-auto ">
                    <div class="card lg-light loginAdmin">
                        <div class="card-header">
                            <h1 class="text-center h2">MyBooking</h1>
                            <h4 class="card-title text-center mb-3">Connexion</h4>
                            {% if hasError %}
                                <div class="alert alert-danger">Votre identification est erronnée</div>
                            {% endif %}
                        </div>
                        <div class="card-body formAdmin">
                            <form method="post">
                                <div class="for-group mt-3">
                                    <label for="email">Email</label>
                                    <input type="email" name="_username" id="email" placeholder="Votre email" value="{{email}}" class="form-control">
                                </div>
                                <div class="for-group mt-3">
                                    <label for="password">Mot de passe</label>
                                    <input type="password" name="_password" id="password" placeholder="Votre mot de passe"class="form-control">
                                </div>
                                <div class="form-group mt-3 row">
                                    <button type="submit" class="btn btn-primary"><i class="fas fa-lock-open"></i> Connexion</button>
                                    <a href="{{path('homepage')}}" class="btn btn-link">Retour au site</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </body>
</html>




